#:import utils kivy.utils

<Button>
    size_hint: (.2,.2)
    font_size: 32
    background_disabled_normal: ''
    disabled_color: 1, 1, 1, 1
    background_normal: ''
    background_color:(0, 35/255, 100/255, 1)
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 1.5
            rectangle: self.x, self.y, self.width, self.height

<Container>
    BoxLayout:
        orientation: 'vertical'
        size: root.width,root.height
        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 60
            size_hint: (1,.15)
            disabled: True
            multiline: False
        GridLayout:
            cols: 4
            rows: 6
            Button:
                text: "%"
                on_press: root.insert("%")
            Button:
                text: "CE"
                on_press: root.backspace()
            Button:
                text: "C"
                id: clear
                on_press: root.clear()
            Button:
                text: "/"
                on_press: root.insert("/")
            Button:
                text: "7"
                on_press: root.insert(7)
            Button:
                text: "8"
                on_press: root.insert(8)
            Button:
                text: "9"
                on_press: root.insert(9)
            Button:
                text: "x"
                on_press: root.insert("x")
            Button:
                text: "4"
                on_press: root.insert(4)
            Button:
                text: "5"
                on_press: root.insert(5)
            Button:
                text: "6"
                on_press: root.insert(6)
            Button:
                text: "-"
                on_press: root.insert("-")
            Button:
                text: "1"
                on_press: root.insert(1)
            Button:
                text: "2"
                on_press: root.insert(2)
            Button:
                text: "3"
                on_press: root.insert(3)
            Button:
                text: "+"
                on_press: root.insert("+")
            Button:
                text: "+/-"
                on_press: root.math_signal()
            Button:
                text: "0"
                on_press: root.insert(0)
            Button:
                text: "."
                on_press: root.insert(".")
            Button:
                text: "="
                on_press: root.solve()